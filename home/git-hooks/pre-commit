#!/usr/bin/env bash
#
# Pre-commit hook using OpenCode agents
# Runs security and code review checks before allowing commit
#

set -e

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

echo -e "${BLUE}üîç Running pre-commit checks with OpenCode...${NC}"

# Check if opencode is available
if ! command -v opencode &> /dev/null; then
    echo -e "${YELLOW}‚ö†Ô∏è  OpenCode not found, skipping checks${NC}"
    exit 0
fi

# Get list of staged files
STAGED_FILES=$(git diff --cached --name-only --diff-filter=ACM)

if [ -z "$STAGED_FILES" ]; then
    echo -e "${GREEN}‚úì No files to check${NC}"
    exit 0
fi

echo -e "${BLUE}üìù Staged files:${NC}"
echo "$STAGED_FILES" | sed 's/^/  - /'
echo ""

# Flag to track if any checks fail
CHECKS_FAILED=0

# Security Check
echo -e "${BLUE}üîí Running security audit...${NC}"
SECURITY_OUTPUT=$(mktemp)

# Create a temporary script to run security check
cat > /tmp/opencode-security-check.sh << 'EOF'
#!/usr/bin/env bash
echo "/security" | opencode --non-interactive 2>&1 || true
EOF
chmod +x /tmp/opencode-security-check.sh

if timeout 30s /tmp/opencode-security-check.sh > "$SECURITY_OUTPUT" 2>&1; then
    # Check for critical security issues in output
    if grep -qi "critical\|high.*severity\|vulnerability" "$SECURITY_OUTPUT"; then
        echo -e "${RED}‚ùå Security issues found!${NC}"
        echo -e "${YELLOW}Review the following:${NC}"
        grep -i "critical\|high.*severity\|vulnerability" "$SECURITY_OUTPUT" | head -10
        CHECKS_FAILED=1
    else
        echo -e "${GREEN}‚úì No critical security issues detected${NC}"
    fi
else
    echo -e "${YELLOW}‚ö†Ô∏è  Security check timed out or failed, continuing...${NC}"
fi

rm -f "$SECURITY_OUTPUT" /tmp/opencode-security-check.sh

# Code Review Check (for specific file types)
CODE_FILES=$(echo "$STAGED_FILES" | grep -E '\.(cs|rb|java|js|ts|py)$' || true)

if [ -n "$CODE_FILES" ]; then
    echo ""
    echo -e "${BLUE}üëÄ Running code review...${NC}"
    REVIEW_OUTPUT=$(mktemp)
    
    cat > /tmp/opencode-review-check.sh << 'EOF'
#!/usr/bin/env bash
echo "/review" | opencode --non-interactive 2>&1 || true
EOF
    chmod +x /tmp/opencode-review-check.sh
    
    if timeout 30s /tmp/opencode-review-check.sh > "$REVIEW_OUTPUT" 2>&1; then
        # Check for critical issues
        if grep -qi "critical\|major.*issue\|bug\|error" "$REVIEW_OUTPUT"; then
            echo -e "${YELLOW}‚ö†Ô∏è  Code review found potential issues:${NC}"
            grep -i "critical\|major.*issue\|bug\|error" "$REVIEW_OUTPUT" | head -10
            echo ""
            echo -e "${YELLOW}Consider addressing these before committing.${NC}"
            # Don't fail on review issues, just warn
        else
            echo -e "${GREEN}‚úì Code review passed${NC}"
        fi
    else
        echo -e "${YELLOW}‚ö†Ô∏è  Code review timed out or failed, continuing...${NC}"
    fi
    
    rm -f "$REVIEW_OUTPUT" /tmp/opencode-review-check.sh
fi

echo ""

# Final decision
if [ $CHECKS_FAILED -eq 1 ]; then
    echo -e "${RED}‚ùå Pre-commit checks failed!${NC}"
    echo -e "${YELLOW}Fix the issues above or use 'git commit --no-verify' to skip checks.${NC}"
    exit 1
else
    echo -e "${GREEN}‚úÖ All pre-commit checks passed!${NC}"
    exit 0
fi
